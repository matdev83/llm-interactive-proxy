# SECURITY NOTICE: Never store actual API keys in config files!
# This file shows EXAMPLE environment variable names and formats.
# Replace the placeholder values below with your actual API keys.
# Real API keys should only be set as environment variables, NEVER in config files.

# Gemini API Keys for Round-Robin Configuration
# Configure multiple Gemini API keys for round-robin usage
# WARNING: Replace these placeholder values with your actual API keys
GEMINI_API_KEY_1=your_first_gemini_api_key_here
GEMINI_API_KEY_2=your_second_gemini_api_key_here
GEMINI_API_KEY_3=your_third_gemini_api_key_here
GEMINI_API_KEY_4=your_fourth_gemini_api_key_here
GEMINI_API_KEY_5=your_fifth_gemini_api_key_here

# Set Gemini as the default backend
LLM_BACKEND=gemini

# Google Cloud Project ID (required for Gemini CLI Direct backend)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id

# Client API key for accessing this proxy (used when disable_auth=false)
# WARNING: Replace with your actual proxy authentication key
LLM_INTERACTIVE_PROXY_API_KEY=choose_a_secret_key

# API brute-force protection (invalid key throttling)
BRUTE_FORCE_PROTECTION_ENABLED=true
BRUTE_FORCE_MAX_FAILED_ATTEMPTS=5
BRUTE_FORCE_TTL_SECONDS=900
BRUTE_FORCE_INITIAL_BLOCK_SECONDS=30
BRUTE_FORCE_BLOCK_MULTIPLIER=2.0
BRUTE_FORCE_MAX_BLOCK_SECONDS=3600

# Optional settings
REDACT_API_KEYS_IN_PROMPTS=true
DISABLE_INTERACTIVE_COMMANDS=false
# PROJECT_DIR_RESOLUTION_MODEL=openai:gpt-4o-mini

# Tool Call Repair (auto-convert plain-text tool calls)
# Enabled by default; set to false to disable
TOOL_CALL_REPAIR_ENABLED=true
# Cap per-session streaming repair buffer in bytes (default 65536)
TOOL_CALL_REPAIR_BUFFER_CAP_BYTES=65536

# Loop Detection Settings
LOOP_DETECTION_ENABLED=true
LOOP_DETECTION_BUFFER_SIZE=2048
LOOP_DETECTION_MAX_PATTERN_LENGTH=500

# Tool Call Reactor Settings
# Event-driven system for reacting to tool calls from LLMs
TOOL_CALL_REACTOR_ENABLED=true
# Enable/disable steering for apply_diff -> patch_file recommendations
APPLY_DIFF_STEERING_ENABLED=true
# How often to show steering messages per session (seconds)
APPLY_DIFF_STEERING_RATE_LIMIT_SECONDS=60
# Enable steering that warns before running the entire pytest suite (opt-in)
PYTEST_FULL_SUITE_STEERING_ENABLED=false

# Health Check Settings
# Set to true to disable health checks globally (enabled by default for better reliability)
# DISABLE_HEALTH_CHECKS=false 

# Anthropic API Keys for Round-Robin Configuration
# WARNING: Replace these placeholder values with your actual API keys
ANTHROPIC_API_KEY_1=your_first_anthropic_api_key_here
ANTHROPIC_API_KEY_2=your_second_anthropic_api_key_here
# Provide single key instead:
# WARNING: Replace with your actual API key
# ANTHROPIC_API_KEY=your_single_anthropic_key 
